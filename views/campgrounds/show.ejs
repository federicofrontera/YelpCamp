<%- include("../partials/header") %>
<%- include("../partials/mapbox") %>

<div class="row">
    <div class="col-md-3">

        <div class="thumbnail">
            <div id='map'><%= campground.name %></div>

            <div class="caption">
                <p class="lead">Yelp Camp</p>
                <div class="list-group">
                    <li class="list-group-item active">Info</li>
                    <li class="list-group-item">Info</li>
                    <li class="list-group-item">Info</li>
                </div>
            </div>
        </div>

    </div>

    <div class="col-md-9">
        <div class="thumbnail">
            <img class="img-responsive" src="<%= campground.image %>" alt="campground.name">
            <div class="caption">
                <h4 class="pull-right">$<%= campground.price %>/night</h4>
                <h4><a href="">Welcome to <%= campground.name %></a></h4>
                <p>
                    <%= campground.description %>
                </p>

                <p>
                    <em>Submitted by <%= campground.author.username %> </em>
                </p>
                <% if(currentUser && campground.author._id.equals(currentUser._id)){ %>
                    <a id="edit-button" href="/campgrounds/<%= campground._id %>/edit" class="btn btn-xs btn-warning">Edit</a>
                    <form class="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-xs btn-danger">Delete</button>
                    </form>
                <% } %>
            </div>

        </div>

        <div class="well">
            <div class="text-right">
                <p>
                    <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add New
                        Comment</a>
                </p>
            </div>
            <% campground.comments.forEach(function (comment) { %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author.username %></strong>
                        <span class="pull-right">10 days ago</span>
                        <p>
                            <%= comment.text %>
                        </p>
                        <% if(currentUser && comment.author._id.equals(currentUser._id)){ %>
                            <a href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit"
                               class="btn btn-xs btn-warning">EDIT</a>
                            <form class="delete-form"
                                  action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE"
                                  method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="DELETE">
                            </form>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<a href="/campgrounds">Campgrounds index</a>

<script>
    const campground = <%- JSON.stringify(campground) %>
    mapboxgl.accessToken = 'pk.eyJ1Ijoib2tvbmRvciIsImEiOiJja2RnMmhrYmcyZHc4MnFwbTI5OXljdzBsIn0.FvyZoJXrxisObGhcQYpg6A';

    var map = new mapboxgl.Map({
        container: 'map',
        style: 'mapbox://styles/mapbox/light-v10',
        center:  campground.coordinates,
        zoom: 5
    });

    // add markers to map

        // create a HTML element for each feature
        var el = document.createElement('div');
        el.className = 'marker';

        // make a marker for each feature and add to the map
        new mapboxgl.Marker(el)
            .setLngLat(campground.coordinates)
            .setPopup(new mapboxgl.Popup({ offset: 25 }) // add popups
                .setHTML('<h3>' + campground.name + '</h3><p>' + campground.coordinates + '</p>'))
            .addTo(map);



</script>
<%- include("../partials/footer") %>